<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CatalogueFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/catalogueAbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:liftOnScroll="true"
        app:liftOnScrollTargetViewId="@id/categoryRecyclerView">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/catalogueToolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:title="@string/catalogue_toolbar_title"
            app:titleTextAppearance="@style/ToolbarText"
            app:navigationIcon="@drawable/ic_arrow_back"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/catalogue_body"
            style="@style/BodyText"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="@dimen/_12sdp"
        android:clipToPadding="false"
        android:paddingStart="@dimen/_6sdp"
        android:paddingEnd="@dimen/_6sdp"/>

    <ProgressBar
        android:id="@+id/catalogueProgressBar"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        app:layout_anchor="@id/categoryRecyclerView"
        app:layout_anchorGravity="center"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>